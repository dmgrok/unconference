{
  "name": "unconference",
  "private": true,
  "type": "module",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "nuxt build",
    "build:azure": "npx nuxi build --preset=azure",
    "build:docker": "docker build -t unconference .",
    "dev": "npm run db:setup && npx nuxi dev --dotenv .env",
    "dev:simple": "npx nuxi dev --dotenv .env",
    "docker": "docker run --rm -it -p 3000:3000 -v \"$(pwd)/data:/src/data\" --env-file .env --name unconference unconference",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && npm run db:generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "db:setup": "npm run db:generate && npm run db:migrate",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset --force",
    "db:seed": "node scripts/create-test-users.mjs",
    "docs:update": "node scripts/organize-docs.js && node scripts/update-readme.js",
    "docs:changelog": "node scripts/update-changelog.js",
    "docs:organize": "node scripts/organize-docs.js",
    "docs:readme": "node scripts/update-readme.js",
    "docs:setup": "node scripts/setup-git-hooks.js",
    "docs:all": "npm run docs:organize && npm run docs:readme && npm run docs:changelog"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@nuxt/schema": "^3.17.3",
    "@playwright/test": "^1.55.0",
    "@prisma/client": "^6.15.0",
    "@stripe/stripe-js": "^7.9.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^7.0.1",
    "@types/qrcode": "^1.5.5",
    "bcryptjs": "^3.0.2",
    "nodemailer": "^7.0.6",
    "nuxt": "^3.17.3",
    "nuxt-auth-utils": "^0.5.20",
    "prisma": "^6.15.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^18.5.0",
    "vue": "^3.5.14",
    "vue-router": "^4.5.1",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@nuxt/test-utils": "^3.19.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "axe-core": "^4.10.3",
    "vite-plugin-vuetify": "^2.1.1",
    "vitest": "^3.1.4",
    "vuetify": "^3.8.5"
  }
}
